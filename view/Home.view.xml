		<TileContainer
			id="tileContainer">
			
			<StandardTile
				icon="{i18n>tile_icon_1}"
				number="{i18n>tile_number_1}"
				type="Monitor"
				title="{i18n>tile_title_1}"
				info="{i18n>tile_info_1}"
				press="onNavToStockSearch">
				<customData>
     				<core:CustomData key="type" value="all"/>
   				</customData>				
			</StandardTile>						
			<StandardTile
				icon="{i18n>tile_icon_2}"
